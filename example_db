CREATE DATABASE SuperProfDB;

USE SuperProfDB;

CREATE TABLE 'USERS' (
  'user_id'       INT NOT NULL AUTO_INCREMENT UNIQUE,
  'name'          VARCHAR(20) NOT NULL,
  'surname'       VARCHAR(20) NOT NULL,
  'birth'         DATE NOT NULL,
  'gender'        ENUM('M','F') NULL,
  'email'         VARCHAR(40) NOT NULL,
  'password'      VARCHAR(20) NOT NULL,
  'type'          INT NOT NULL,          #questo mi serve per differenziare gli studenti dai professsori dagli amministratori
  'photo'         BLOB NULL,
  'Description'   CLOB NULL,
  PRIMARY KEY ('user_id'))
ENGINE = InnoDB;

CREATE TABLE  'PROF' (
  'prof_id'       INT NOT NULL,
  'subjects'      VARCHAR(20) NULL,
  PRIMARY KEY ('prof_id')
  FOREIGN KEY ('prof_id') REFERENCES 'USERS'('user_id'))
ENGINE = InnoDB;  

CREATE TABLE  'STUDENTS' (
  'user_id'       INT NOT NULL,
  'subjects'      VARCHAR(20) NULL,
  'school'        VARCHAR(20) NULL,
  PRIMARY KEY ('student_id')
  FOREIGN KEY ('student_id') REFERENCES 'USERS'('user_id'))
ENGINE = InnoDB;  

CREATE TABLE  'QUESTIONS' (
 'student_id'        INT NOT NULL,
 'question_id'    INT NOT NULL AUTO_INCREMENT UNIQUE,
 'title'          VARCHAR(20) NULL,
 'body'           CLOB NULL,
 PRIMARY KEY ('question_id')
 FOREIGN KEY ('student_id') REFERENCES 'USERS'('student_id'))
ENGINE = InnoDB; 

CREATE TABLE  'ANSWERS' (
 'prof_id'        INT NOT NULL,
 'answer_id'      INT NOT NULL AUTO_INCREMENT UNIQUE,
 'body'           CLOB NULL,
 PRIMARY KEY ('answer_id')
 FOREIGN KEY ('prof_id') REFERENCES 'USERS'('user_id'))
ENGINE = InnoDB; 

CREATE TABLE 'STUDY'(
  'student_id'       INT NOT NULL,
  'subject_name'  VARCHAR(20) NULL,
  PRIMARY KEY ('user_id','subject_name')
  FOREIGN KEY ('student_id') REFERENCES 'USERS'('student_id'))
  FOREIGN KEY ('subject_name') REFERENCES 'SUBJETCS'('subject_name'))
 ENGINE = InnoDB;
  
CREATE TABLE  'SUBJECTS' (
 'subjects_name'   VARCHAR(20) NULL,
 PRIMARY KEY ('subjects')
ENGINE = InnoDB; 
